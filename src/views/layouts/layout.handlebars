          </ul>
        </div>
        <div class="col-sm-12 col-md-9" style="overflow: scroll">
          {{#if success_mesages }}
            <div class="alert alert-success">{{success_mesages}}</div>
          {{/if}}
          {{#if error_messages }}
            <div class="alert alert-danger mb-2">{{error_messages}}</div>
          {{/if}}
          {{{body}}}
        </div>
      </div>
    </div>
