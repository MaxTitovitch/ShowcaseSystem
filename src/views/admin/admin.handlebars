<div class="jumbotron">
  <h1>{{message.success_messages}} администратора</h1>

  <form action="{{path}}" method="post">
    <div class="form-group">
      <label for="inputEmail">Логин:</label>
      <input type="text" name="login"  class="form-control" id="inputEmail"placeholder="Введите логин" value="{{#if entity}}{{entity.login}}{{/if}}">
    </div>
    <div class="form-group">
      <label for="inputPassword">Пароль:</label>
      <input type="password" name="password" class="form-control" id="inputPassword" placeholder="Введите пароль">
    </div>
    <button type="submit" class="btn btn-success w-25">Сохранить</button>
    <a href="/admin/admins" class="btn btn-secondary w-25">Назад</a>
  </form>
</div>